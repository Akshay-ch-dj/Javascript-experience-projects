{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "linebreak-style": 0,
      "require-jsdoc": 0,
      "no-throw-literal": 0,
      // Show error when const reassigning
      "no-const-assign": "error",
      // Spacing around operators
      "space-infix-ops": "error",
      // Spacing between object literals
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
}
